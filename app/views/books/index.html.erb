<p id="notice"></p>

<h1>Books</h1>

<table>

  <thead>

    <tr>

      <th>Title</th>

      <th>Body</th>

      <th colspan="3"></th>

    </tr>

  </thead>

  <tbody>

    <% @books.each do |book| %>

     <tr class="list-comment">
      <!--投稿されたタイトル表示-->
      <td><% book.title %></td>
      <!--投稿された説明表示-->
      <td><% book.body %></td>
      <!--show-->
      <!--edit-->

     </tr>

    <% end %>

  </tbody>

</table>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>

 <div class="field">
   
   <h4>Title</h4>
   <%= f.text_feild :title %>
   
   <h4>Body</h4>
   <%= f.text_area :body %>
   
   <%= f.submit "Create Book" %>
   
 </div>
 
<% end %>
