<h1>Books</h1>

<table>

  <thead>

    <tr>

      <th>Title</th>

      <th>Body</th>

      <th></th>

    </tr>

  </thead>

  <tbody>

    <% @books.each do |book| %>

     <tr>
       
      <div class="field">
      <!--投稿されたタイトル表示-->
      <td><%= book.title %></td>
      
      </div>
      
      <div class="field">
      <!--投稿された説明表示-->
      <td><%= book.body %></td>
      
      </div>
      
      <!--show-->
      <td><%= link_to "Show", book_path(book[:id]) %></td>
      <!--edit-->
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <!--destroy-->
      <td><%= link_to "Destroy",book_path(book), method: :delete, "data-confirm" => "Aer you sure?" %></td>

     </tr>

    <% end %>

  </tbody>

</table>

<h1>New book</h1>

<%= form_with model: @book do |f| %>

   <h4>Title</h4>
   
   <div class="field">
     
   <%= f.text_field :title %></br>
   
   </div>

   <h4>Body</h4>
   
   <div class="field">
     
   <%= f.text_area :body %></br>
   
   </div>
   
   <div class="field">

   <%= f.submit "Create Book" %>
   
   </div>

 </div>

<% end %>
